<h1>StaticPages#index</h1>
<p>Find me in app/views/static_pages/index.html.erb</p>

<% if user_signed_in? %>
  Welcome <%= current_user.first_name %> <%= current_user.last_name %>
  <%= button_to  'logout', destroy_user_session_path, method: :delete %>

  <% @links.each do |link| %>

  <%= link_to link.title, file_link_path(link) %> 
  <%= link.last_click_by(current_user) ?  " <last viewed: #{link.last_click_by(current_user).created_at.to_date}>" : " <new!>" %>
  <br>

  <% end %>
<% else %>
  <%= link_to 'Sign Up!', new_user_registration_path %> or
  <%= link_to 'Login', new_user_session_path %>
<% end %>
